<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Fiap">
        <item name="android:textColor">@color/colorText</item>
    </style>
    <style name="Fiap.Button">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textSize">@dimen/custom_button_text_size</item>
    </style>
    <style name="Fiap.Header">
        <item name="android:background">@color/colorPrimaryDark</item>
        <item name="android:padding">@dimen/default_padding</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/default_padding</item>
        <item name="android:layout_marginBottom">@dimen/default_padding</item>
    </style>

</resources>
